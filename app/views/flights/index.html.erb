<h1>Flights Search</h1>

<div>
  <%= form_with url: root_path, method: :get do |form| %>
    <div>
      <%= form.label :departure_airport_id %>
      <%= form.select(:departure_airport_id, @departure_airport_options) %>
    </div>

    <div>
      <%= form.label :arrival_airport_id %>
      <%= form.select(:arrival_airport_id, @arrival_airport_options) %>
    </div>

    <div>
      <%= form.label :passenger_number %>
      <%= form.select(:passenger_number, @passenger_numbers) %>
    </div>

    <div>
      <%= form.label :start_date %>
      <%= form.select(:start_date, @start_dates) %>
    </div>

    <%= form.submit "Search"%>
  <% end %>
</div>